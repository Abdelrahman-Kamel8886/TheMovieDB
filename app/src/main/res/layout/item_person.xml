<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingEnd="10sp"

    android:layout_marginBottom="10sp">


<com.google.android.material.card.MaterialCardView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5sp"
    app:cardBackgroundColor="@color/mainColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="2sp"
    app:strokeColor="@color/white"
    >



<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="100sp"
    android:layout_height="wrap_content"
    android:paddingBottom="5sp"


    >

    <ImageView
        android:id="@+id/pesronImage"
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:src="@drawable/noimage"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/personName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="5sp"
        android:layout_marginTop="5sp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="person Name"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/pesronImage"
         />

    <TextView
        android:id="@+id/personcharachter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/personName"
        app:layout_constraintEnd_toEndOf="@id/personName"
        android:layout_marginTop="5sp"
        android:textColor="@color/SecondColor"
        android:textSize="12sp"
        tools:text="actor"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/personName"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>